    RPS1="%F{white}%(?.${${KEYMAP/vicmd/-- NORMAL --}/(main|viins)/ }.%F{red}${${KEYMAP/vicmd/-- NORMAL --}/(main|viins)/â”})%{$reset_color%}"
    RPS2=$RPS1
    zle reset-prompt
}

